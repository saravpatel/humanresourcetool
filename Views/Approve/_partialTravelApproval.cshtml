    $('#DocumentModalTable2').on('click', '.downloadbtn', function () {//replace table selector with an id selector, if you are targetting a specific table
       
        var Text = 'TravelLeave';
        var filename = $(this).parent().find("input[type='hidden']").val()
        $.ajax(
            {
                url: '@Url.Action("Download", "Approve")?FilePath=' + filename + '&Text=' + Text,
                contentType: 'application/json; charset=utf-8',
