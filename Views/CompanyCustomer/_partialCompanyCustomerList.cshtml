@model HRTool.Models.Settings.CompanyCustomerViewModel

<div class="table-btns">
    <a class="btn btn-success btn-circle  btn-add-Customer" data-toggle="modal" data-target="#addCustomer" title="Add Business"><i class="fa fa-plus"></i></a>
    <a class="btn btn-primary btn-circle  btn-edit-Customer" data-toggle="modal" data-target="#addCustomer" title="Edit" disabled="disabled"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-danger btn-circle  btn-delete-Customer" title="Delete" disabled="disabled">
        <i class="fa fa-trash-o"></i>
    </a>
    <button title="Refresh" class="btn btn-primary btn-circle  btn-Refresh-Customer" data-toggle="tooltip" data-placement="right"><i class="fa fa-reply"></i></button>
    <button title="Clear Sorting" class="btn btn-info btn-circle  btn-ClearSorting-Customer" data-toggle="tooltip" data-placement="right"><i class="fa fa-upload"></i></button>
    <button class="btn btn-warning btn-circle  btn-clearFilter-Customer" title="Clear Filter"><i class="fa fa-filter" data-toggle="tooltip" data-placement="right"></i></button>
</div>
<table id="example1" class="table-bordered display table style2 table-striped  dataTable" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Mobile</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th >
                <input type="text" class="form-control SearchCustomerName" placeholder="Customer Name">
            </th>
            <th >
                <input type="number" class="form-control SearchCustomerPhone" placeholder="Customer Phone">
            </th>
            <th >
                <input type="text" class="form-control SearchCustomerEmail" placeholder="Customer Email">
            </th>
            <th >
                <input type="number" class="form-control SearchCustomerMobile" placeholder="Customer Mobile">
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model.customerList)
        {
            <tr id="@item.Id" class="dataTr">
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="addCustomer" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title customerTitle" id="myModalLabel">Add Customer</h4>

            </div>

            <!-- Modal Body -->
            <div class="modal-body" id="AddEditCompanyCustomer">

            </div>
            <br />
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btn-submit-Customer">ADD</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>


