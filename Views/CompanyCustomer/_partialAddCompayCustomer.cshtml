    <div class="col-md-4">
        <span class="field-validation-error" id="lbl-error-LastName" style="display:none;" data-valmsg-for="LastName" data-valmsg-replace="true">The Last Name is required.</span>
    </div>
</div>

<div class="row marbot10">
    <div class="col-md-2">
        <label class="control-label" for="Cmp_Email">Email*</label>
    </div>
    <div class="col-md-6">
        <input type="email" class="form-control" id="Cmp_EmailText" value="@Model.Email" data-toggle="tooltip" name="Cmp_Email" title="Email" required>
