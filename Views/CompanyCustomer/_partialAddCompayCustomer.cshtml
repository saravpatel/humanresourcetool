@model HRTool.Models.Settings.CompanyCustomerViewModel

<div class="row marbot10">
    <div class="col-md-2">
        <input type="hidden" id="customer_Id" value="@Model.Id" />
        <label class="control-label" for="CustomerPhotoPath">Upload picture</label>
    </div>
    <div class="col-md-6">
        <label type="file" for="fileToUpload" class="btn btn-sm btn-purple btn-upload md-btn-primary">BROWSE</label>
        <input type="file" id="fileToUpload" onchange="readURL(this)" accept=".jpg,.jpeg,.bmp,.png" style="display: none">
        <!-- <input autocomplete="off" id="fileToUpload" accept=".jpg,.jpeg,.bmp,.png" class="btn btn-sm btn-purple btn-upload" style="display: block;" name="fileUpload" type="file"> -->
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {

            <img src="~/Upload/CompanyCustomer/@Model.PhotoPath" style="height:15px;" />
        }
        else
        {
            <img src="~/Images/no-image.jpg" class="editpic" />
        }

        @*<input type="text" class="form-control" value="@Model.Value" id="txt-SystemListValueName" placeholder="Skill Name" data-toggle="tooltip" name="Value" title="Skill Name">*@
    </div>
    <div class="col-md-4">
        @*<span class="field-validation-error" id="lbl-error-SystemListValueName" style="display:none;" data-valmsg-for="Value" data-valmsg-replace="true">The List Skill is required.</span>*@
    </div>
</div>
<div class="row marbot10">
    <div class="col-md-2">

        <label class="control-label" for="TitleList">Title*</label>
    </div>
    <div class="col-md-6">

        <select id="selTitle">
            <option class="selTitle" id="0" value="0">-- Select Title --</option>
            @foreach (var items in Model.titleList)
            {
                if (Model.TitleValue == @items.Value)
                {
                    <option class="selTitles" selected="selected" id="@items.SystemListID" value="@items.Id">@items.Value</option>
                }
                else
                {
                    <option class="selTitles" id="@items.SystemListID" value="@items.Id">@items.Value</option>
                }

            }
        </select>
    </div>
    <div class="col-md-4">
        <span class="field-validation-error" id="lbl-error-TitleList" style="display:none;" data-valmsg-for="TitleList" data-valmsg-replace="true">The Title Name is required.</span>
    </div>
</div>

<div class="row marbot10">
    <div class="col-md-2">
        <label class="control-label" for="FirstName">First Name*</label>
    </div>
    <div class="col-md-6">
        <input type="text" class="form-control" id="firstNameText" value="@Model.FirstName" data-toggle="tooltip" name="FirstName" title="First Name" required>
    </div>
    <div class="col-md-4">
        <span class="field-validation-error" id="lbl-error-FirstName" style="display:none;" data-valmsg-for="FirstName" data-valmsg-replace="true">The Fist Name is required.</span>
    </div>
</div>

<div class="row marbot10">
    <div class="col-md-2">
        <label class="control-label" for="LastName">Last Name</label>
    </div>
    <div class="col-md-6">
        <input type="text" class="form-control" id="LastNameText" value="@Model.LastName" data-toggle="tooltip" name="LastName" title="Last Name" required>
