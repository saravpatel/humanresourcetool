@model List<HRTool.Models.Settings.CustomerCompanyListViewModel>


<div class="modal fade" id="addCustomerCompany" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title customerCompanyTitle" id="myModalLabel">Company Information</h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body" id="AddEditCustomerCompany">

            </div>
            <br />
            <!-- Modal Footer -->
            <div class="modal-footer">
                @*<button type="button" class="btn btn-success" id="btn-submit-CustomerCompany">ADD</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">CANCEL</button>*@
            </div>
        </div>
    </div>
</div>

<div class="table-btns">
    <a class="btn btn-success btn-circle  btn-add-CustomerCompany" data-toggle="modal" data-target="#addCustomerCompany" title="Add Customer"><i class="fa fa-plus"></i></a>
    <a class="btn btn-primary btn-circle  btn-edit-CustomerCompany" title="Edit Customer" disabled="disabled"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-danger btn-circle  btn-delete-CustomerCompany" title="Delete" disabled="disabled">
        <i class="fa fa-trash-o"></i>
    </a>
    <button title="Refresh" class="btn btn-primary btn-circle  btn-Refresh-CustomerCompany" data-toggle="tooltip" data-placement="right"><i class="fa fa-refresh"></i></button>
    <button title="Clear Sorting" class="btn btn-info btn-circle  btn-ClearSorting-CustomerCompany" data-toggle="tooltip" data-placement="right"><i class="fa fa-upload"></i></button>
    <button class="btn btn-warning btn-circle  btn-clearFilter-CustomerCompany" title="Clear Filter"><i class="fa fa-filter" data-toggle="tooltip" data-placement="right"></i></button>
</div>

<table id="CustomerCompanyTable" class="table-bordered display table style2 table-striped  dataTable" cellspacing="0">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Parent Company</th>
            <th>Customer Currency</th>
            <th>Number Of Users</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th >
                <input type="text" class="form-control SearchCustomerName" placeholder="Customer Name">
            </th>
            <th >
                <input type="text" class="form-control SearchCustomerParent" placeholder="Parent Company">
            </th>
            <th >
                <input type="text" class="form-control SearchCustomerCurrency" placeholder="Customer Currency">
            </th>
            <th >
                <input type="number" class="form-control SearchCompanyUsers" placeholder="Numbers of Users" id="txtSearchCompanyUsers">
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id" class="dataTr">
                <td>@item.CompanyName</td>
                <td>@item.ParentCompany</td>
                <td>@item.CurrencyName</td>
                <td>@item.CustomerCount</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#txtSearchCompanyUsers").keypress(function (event) {
        if (event.which != 8 && event.which != 0 && (event.which < 48 || event.which > 57)) {
            return false;
        }
    });
</script>


