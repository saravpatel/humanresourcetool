        </tr>
        <tr>
            <td>2</td>
            <td><input size="1" type="number" value="@Model.LowerValue2" id="LowerValue2" name="LowerValue2" class="form-control" placeholder="Lower Value 2" /></td>
            <td><input size="1" type="number" value="@Model.UpperValue2" id="UpperValue2" name="UpperValue2" class="form-control" placeholder="Upper Value 2" /></td>
            <td><input type="text" value="@Model.Alert2" id="Alert2" name="Alert2" class="form-control" placeholder="Alert 2" /></td>
        </tr>
        <tr>
            <td>3</td>
            <td><input size="1" type="number" value="@Model.LowerValue3" id="LowerValue3" name="LowerValue3" class="form-control" placeholder="Lower Value 3" /></td>
