            <td><input size="1" type="number" value="@Model.UpperValue4" id="UpperValue4" name="UpperValue4" class="form-control" placeholder="Upper Value 4" /></td>
            <td><input type="text" value="@Model.Alert4" id="Alert4" name="Alert4" class="form-control" placeholder="Alert 4" /></td>
        </tr>
    </tbody>
</table>
