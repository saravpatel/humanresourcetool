                    <div class="seccomments row" id="comment_@comments" data-commentid="0"><div class="col-lg-10"><p><span class="black postedby">@item.commentBy</span> - <span class="commentTime">@item.commentTime</span></p><div class="sickComments" data-commentstring="@item.comment"></div></div><div class="col-lg-2" style=""><i class="fa fa-pencil editComment"></i><i class="fa fa-trash-o deleteComment"></i></div></div>
                    comments = comments + 1;
                }
            }
        </div>
        <div>
            <div id="Applicantfroala-editor"></div>
            <button class="md-btn md-btn-primary" id="btnAddComment" style="margin-top:5px;float:right;"><i class="fa fa-plus"></i> Add Comment</button>
            <button class="md-btn md-btn-primary" data-editid="" id="btnEditComment" style="margin-top:5px;float:right;display:none;"><i class="fa fa-pencil"></i> Edit Comment</button>
        </div>

    </div>

    <div id="step-5">
        <div class="browse-attach">
            <label type="file" for="DocumentfileToUpload" class="btn btn-sm btn-purple btn-upload md-btn-primary">
                <p>Drop docs,pdfs or images here or click to upload</p>
                <span class="btn">BROWSE</span>
            </label>
            <input type="file" id="DocumentfileToUpload" style="display: none">                  
        </div>

        <div id="filesList">
            @if (Model.DocumentList.Count > 0)
            {
                foreach (var item in Model.DocumentList)
                {
                    <div class="row ListData">
                        <div><a href="~/Upload/TMSApplicant/@item.newName" id="DownloadFileList" class="md-btn md-btn-primary md-btn-small download" target="_blank" download>Download</a></div>
                        <div class="col-lg-1 icon"><i class="fa fa-paperclip"></i></div><div class="col-lg-10 attach-disc"><label class="fileName" data-newfilename="@item.newName">@item.originalName</label><br><input type="text" class="ImageDescription form-control" value="@item.description" placeholder="Add Description Here"></div><div class="col-lg-1 file-deleteicon"><i class="fa fa-trash-o" onclick="deleteDoc(@item.Id)"></i></div>
                    </div>                
                    <input type="hidden" id="doc_@docId" value="@item.Id" />
                }
            }
        </div>
    </div>

    <div id="step-6">
        <div class="row marbot10">
            <label class="col-md-3">General Skills *</label>
            <div class="col-md-6 dropdown-selectlist">
                <select class="form-control" id="drp-GeneralSkills" multiple="multiple">

                    @foreach (var General in Model.GeneralSkillsList)
                    {
                        if (Model.SelectGeneralSkiils.Contains(General.Value))
                        {
                            <option value="@General.Value" selected="selected">@General.Text</option>
                        }
                        else
                        {
                            <option value="@General.Value">@General.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
            </div>
        </div>

        <div class="row marbot10">
            <label class="col-md-3">Technical Skills*</label>
            <div class="col-md-6 dropdown-selectlist">
                <select class="form-control" id="drp-TechnicalSkills" multiple="multiple">
                    @foreach (var Technical in Model.TechnicalSkillsList)
                    {
                        if (Model.SelectTechnicalSkills.Contains(Technical.Value))
                        {
                            <option value="@Technical.Value" selected="selected">@Technical.Text</option>
                        }
                        else
                        {
                            <option value="@Technical.Value">@Technical.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>

    <div id="step-7">

        <div class="row marbot10">
            <div class="col-md-3">
                <label class="control-label" for="Cost">Cost</label>
            </div>
            <div class="col-md-6">
                <input type="number" min="0" class="form-control" id="txt_Cost" value="@Model.Cost" data-toggle="tooltip" data-placement="right" name="Cost" title="Cost" required>
            </div>
            <div class="col-md-3">
                <span class="field-validation-error" id="lbl-error-Cost" style="display:none;" data-valmsg-for="Cost" data-valmsg-replace="true">The Cost is required.</span>
            </div>
        </div>
    </div>
</div>


