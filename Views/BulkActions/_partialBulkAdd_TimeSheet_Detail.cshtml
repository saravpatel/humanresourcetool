@model HRTool.Models.BulkActions.EmployeePlanner_TimeSheet_DetailViewModel
<div class="col-md-12 border-div-top Timesheet_Detail_Div" id="timesheetDetails">
    <div class="row marbot10">
        <div class="col-md-3">
            <label class="control-label" for="InTimeSD">Time In*</label>
        </div>
        <div class="col-md-1">
            <div class="input-group spinner">
                <select id="drp-HourseListSDTimesheet" class="form-control" onchange="ChangeHour()">
                    @foreach (var item in Model.HoursList)
                    {
                        if (Model.InTimeHr.ToString() == item.Value)
                        {
                            <option value=@item.Value selected="selected">@item.Text</option>
                        }
                        else
                        {
                            <option value=@item.Value>@item.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="col-md-5">
            <div class="input-group spinner">
                <select id="drp-MinutesListSDTimesheet" class="form-control" onchange="ChangeHour()">
