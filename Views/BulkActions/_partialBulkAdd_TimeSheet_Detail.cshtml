<script>
    var bulkActionCustomer = {
        getCustomer: '@Url.Action("getCustomer", "BulkActions")',

    }
</script>
<script>
    searchCustomer();
    function searchCustomer() {
        var listData = [];
        $.ajax({
            url: bulkActionCustomer.getCustomer,
            data: {},
            success: function (data) {
                $.each(data.CustomerList, function (index, item) {
                    listData.push(item.Text);
                });
                //Copy From
                var input = document.getElementById("custNameText");
                var awesomplete = new Awesomplete(input, {
                    minChars: 1,
                    maxItems: 5,
                    autoFirst: true,
                });
                awesomplete.list = listData;
                $('#custNameText').change(function () {
                    value = $('#custNameText').val();
                    for (var i = 0; i < data.CustomerList.length; i++) {
                        if (value == data.CustomerList[i].Text) {
                            var eid = data.CustomerList[i].Value;
                            break;
                        }
                        else {
                            eid = '';
                        }
                    }
                    $("#drp-Customer").val(eid);
                });

            }
        });
    }
    function ChangeHour() {
        $("#lbl-error-validtimeSD").hide();
        var arryDiff = [];
        var totalMonth=0;
        $('.Timesheet_Detail_Div').each(function () {
            debugger;
            var Diff = 0;
            var St = $(this).find('#drp-HourseListSDTimesheet').val();
            var Sm = $(this).find('#drp-MinutesListSDTimesheet').val();
            var Et = $(this).find('#drp-HourseListEDTimesheet').val();
            var Em = $(this).find('#drp-MinutesListEDTimesheet').val();
            Diff = ((new Date("1991-1-1 " + Et + "" + ":" + "" + Em + "") - new Date("1991-1-1 " + St + "" + ":" + "" + Sm + "")) / 1000 / 60 / 60).toFixed(2);
            arryDiff.push(Diff);          
        });
        for (var i = 0; i < arryDiff.length; i++) {
            totalMonth = parseFloat(totalMonth) + parseFloat(arryDiff[i]);
        }
        if (totalMonth < 0) {          
            $("#lbl-error-validtimeSD").show();
        }
        else {
            debugger;
            document.getElementById("totalTodayTime").innerHTML = totalMonth;
        }
    }

</script>