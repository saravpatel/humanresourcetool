
@model HRTool.Models.BulkActions.AddResourceBulk

<div id="findBtn">
    <div class="md-card" style="padding:10px;">
        
        <div class="row marbot10">
            <div class="col-md-3">
                <label class="control-label" for="DownloadApplicationForm">Download Resource Sheet</label>
               
            </div>
            <div class="col-md-1"><a href="~/Upload/@Model.ResourceSheetFormPath" id="DownloadLink" class="btn btn-xs btn-success" target="_blank" download>Download</a></div>
            <div class="col-md-3">
                <label class="control-label" for="CoverLetter">Upload File*</label>
                <label type="file" for="CoverLetterfileToUpload" class="btn btn-xs btn-success">BROWSE</label>
                <input type="file" id="CoverLetterfileToUpload" style="display: none">
            </div>
            <div class="col-md-3">
                <div>
                    <a id="removeResourecSheet">Remove File</a>
                </div> 
            </div>

           </div>

        <div class="row marbot10">
            <div class="col-md-3">
                
            </div>
            <div class="col-md-3">
                <label class="uploadBrowse" id="ResourceSheetName">@Model.FileOriginalPath</label>
                @*<label class="uploadBrowse" id="CoverLetterName">@Model.FileOriginalPath</label>*@
                @*<input type="hidden" id="txt_CoverLetterName" value="@Model.FilePath" />*@
                <input type="hidden" id="txt_ResourceSheetName" value="@Model.FilePath" />
            </div>
             
                      
        </div>
            
    </div>

    <div class="md-card">
        <div class="md-card-content">
            <div id="tableDivResourercords">                  
               <div class="uk-overflow-container">
                    <div class="table-responsive" >
                        <h5>User List</h5>
                        <table id="ResoureListtable" class="table-bordered display table style2 " cellspacing="0">
                            <thead>
                                <tr class="tblHeading">
                                    <th>UserName</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>SSO</th>                                    
                                </tr>
                            </thead>
                            <tbody class="employee_list_fix">
                                @foreach (var item in Model.userList)
                                {

                                    <tr class="dataTr">
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.FirstName
                                        </td>
                                        <td>
                                            @item.LastName
                                        </td>
                                        <td>
                                            @item.SSOID
                                        </td>                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="md-card">
        <div class="md-card-content">
            <div id="tableDivResourercords">
                <div class="uk-overflow-container">
                    <div class="table-responsive">
                        <h5>Error User List</h5>
                        <table id="ResoureListtable" class="table-bordered display table style2 " cellspacing="0">
                            <thead>
                                <tr class="tblHeading">
                                    <th>UserName</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>SSO</th>
                                </tr>
                            </thead>
                            <tbody class="employee_list_fix" >
                                @foreach (var item in Model.emptyuserList)
                                {
                                    <tr class="dataTr" style="color: red;">
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.FirstName
                                        </td>
                                        <td>
                                            @item.LastName
                                        </td>
                                        <td>
                                            @item.SSOID
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">        
        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
</div>