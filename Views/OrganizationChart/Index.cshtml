@model HRTool.Models.OrganizationChart.OrganizationChartViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
      .dbtn {
          background-color: cornflowerblue;
          color: white;
          border-radius: 5px;
      }

      .label-padi {
          padding-left: 15px;
      }     

      #test:before {
          content: 'Before ';
      }
      /*#empChart:hover table{
    transform: scale(1.3);
    transform-origin: 50% 50%;
         }*/
</style>

<div id="page_content_inner">
    <h1 class="page-title">
        Organization Chart
    </h1>
   
    <div class="row">
        <div class="col-md-2">
            <lable>Zoom</lable>
            <select class="form-control" id="Zoom" name="Zoom">
                <option>--Select--</option>
                <option>120%</option>
                <option>150%</option>
            </select>
        </div>
        <div class="col-md-2">
            <lable>Business</lable>
            <select class="form-control" id="drpBusiness">
                <option value="0">All</option>
                @foreach (var Business in Model.BusinessList)
            {
                <option value="@Business.Value">@Business.Text</option>
        }
            </select>
        </div>
        <div class="col-md-2">
            <lable>Division</lable>
            <select class="form-control" id="drpDivision">
                <option value="0">All</option>
            </select>
        </div>
        <div class="col-md-2">
            <lable>Pool</lable>
            <select class="form-control" id="drpPool">
                <option value="0">All</option>
            </select>
        </div>

        <div class="col-md-2">
            <lable>Function</lable>
            <select class="form-control" id="drpFunction">
                <option value="0">All</option>
            </select>
        </div>

        <div class="col-md-2">
            <lable>Exclude Emp of Type</lable>
            <select class="form-control" id="drpResourceType">

                <option value="0">All</option>
                @foreach (var ResourceType in Model.ResourceTypeList)
            {
                <option value="@ResourceType.Value">@ResourceType.Text</option>
        }
            </select>
        </div>
    </div>
    <br />
        <div class="col-md-2">
            <input id="futurestarter" name="futurestarters" type="checkbox" />Show future starters
        </div>
   
 
    <ul class="list-group list-inline">
        <li>
            <button name="button" value="Top" type="button" id="TopId" class="glyphicon  glyphicon-arrow-left btn-info" style="padding:8px;"></button>

        </li>

        <li>
            <button name="button" value="Top" type="button" id="LeftId" class="glyphicon  glyphicon-arrow-right btn-success" style="padding:8px;"></button>

        </li>
        <li>
            <button name="button" value="Top" type="button" id="RightId" class="glyphicon  glyphicon-arrow-up secondary" style="padding:8px;"></button>

        </li>
        <li>
            <button name="button" value="Top" type="button" id="BottomId" class="glyphicon  glyphicon-arrow-down btn-warning" style="padding:8px;"></button>

        </li>

        <li>
            <button name="button" value="Top" type="button" id="DownloadId" class="fa fa-file-pdf-o  btn-danger" style="padding:8px;"></button>

        </li>
        <li>
            <button name="button" value="Top" type="button" id="PreviewId" class="fa fa-eye btn-primary" style="padding:8px;"></button>

        </li>
    </ul>
    <div class="col-md-12" id="empChart" style="overflow:auto;border: 1px solid #c2cad8;padding: 10px;">

    </div>
</div>
















