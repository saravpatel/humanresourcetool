<div class="row marbot10">
    <label class="col-md-3">Date Of Birth*</label>
    <div class="col-md-6">
        <input type="text" name="DateOfBirth" class="form-control Datepiker" id="DateOfBirth" value="@Model.DateOfBirth">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidDateOfBirth" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
        <span class="field-validation-error" id="validAge" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">Please Select Valid Age Of Employee.</span>

    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Nationality*</label>
    <div class="col-md-6 dropdown">
        <select class="form-control" id="drpNationality">
            @foreach (var Nationality in Model.NationalityList)
            {
                <option value="@Nationality.Value">@Nationality.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidNationality" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">NI Number/SSN</label>
    <div class="col-md-6">
        <input type="text" name="NINumber" min="0" class="form-control" id="NINumber" value="" >
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="Validssn" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">Enter valid SSN Number.</span>
    </div>
</div>
<div class="row marbot10">
    <label type="file" for="fileToUpload" class="col-md-3">
        Upload Image
    </label>
    <div class="col-md-6">
        <input type="hidden" id="ImageData" value="" />
        <label type="file" for="fileToUpload" class="btn btn-clr md-btn-primary">BROWSE</label>
        <input type="file" id="fileToUpload" accept=".jpg,.jpeg,.bmp,.png" style="display: none">
        @if (!string.IsNullOrEmpty(Model.Picture))
        {
            <img src="~/Upload/Resource/@Model.Picture" class="editpic" />
        }
        else
        {
            <img src="~/Images/no-image.jpg" class="editpic" />
        }
    </div>
</div>

<script>

     $("#NINumber").keypress(function (e) {            
         if (e.which === 32)
             return false;         
     });
    
</script>
