@model HRTool.Models.Resources.MainResoureViewModel

<input type="hidden" id="Applicant_ID" value="@Model.ApplicantID" />
<input type="hidden" id="Vacancy_ID" value="@Model.VacancyId" />
<div class="row marbot10">
    <label class="col-md-3">Title*</label>
    <div class="col-md-6 dropdown">
        <select class="form-control" id="drpTitle">
            @foreach (var Title in Model.TitleList)
            {
                <option value="@Title.Value">@Title.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidTitle" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">First Name*</label>
    <div class="col-md-6">
        <input type="text" name="FirstName" class="form-control" id="FirstName" value="@Model.FirstName" placeholder="First name">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidFirstName" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Last Name*</label>
    <div class="col-md-6">
        <input type="text" name="LastName" class="form-control" id="LastName" value="@Model.LastName" placeholder="Last name">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidLastName" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Other Name(s)</label>
    <div class="col-md-6">
        <input type="text" name="OtherName" class="form-control" id="OtherName" value="" placeholder="Other name">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidOtherName" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Known as</label>
    <div class="col-md-6">
        <input type="text" name="Knownas" class="form-control" id="Knownas" value="" placeholder="Know as">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidKnownas" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">SSO *</label>
    <div class="col-md-6">
        <input type="text" name="SSO" class="form-control" id="SSO" value="@Model.SSO" onchange="chkForSSO()">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidSSO" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
        <span class="field-validation-error" id="ValidSSONo" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">SSO Number Already Exist.</span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Email*</label>
    <div class="col-md-6">
        <input type="text" name="Email" class="form-control" id="Email" value="@Model.UserNameEmail" placeholder="Email" onchange="chkForEmailId()">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidEmail" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
        <span class="field-validation-error" id="ValidEmailId" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">EmailId Is Already Exist.</span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">IM Address</label>
    <div class="col-md-6">
        <input type="text" name="IMAddress" class="form-control" id="IMAddress" value="" placeholder="IM Address">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">

    </div>
</div>
