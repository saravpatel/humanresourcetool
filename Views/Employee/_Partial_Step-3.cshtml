@model HRTool.Models.Resources.MainResoureViewModel

<style>
    .btn-help-me {
        background: #2196f3;
        color: #fff;
    }
</style>
<div class="row marbot10">
    <label class="col-md-3">Start Date*</label>
    <div class="col-md-6">
        <input type="text" name="StartDate" class="form-control Datepiker" id="StartDate" value="@Model.StartDate" placeholder="Start Date">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidStartDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Resource Type*</label>
    <div class="col-md-6 dropdown">
        <select class="form-control" id="drpResourceType" onchange="checkForData(this);">
            @foreach (var Resource in Model.ResourceTypeList)
            {
                if (Model.LoginUserID != Convert.ToInt32(Resource.Value))
                {
                    <option value="@Resource.Value" @(Resource.Selected ? "Selected" : "")>@Resource.Text</option>
                }
            }
        </select>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidResourceType" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">The Resource Type is required.</span>
    </div>
</div>
<div class="row marbot10">
    <label class="col-md-3">Probation End Date*</label>
    <div class="col-md-6">
        <input type="text" name="ProbationEndDate" class="form-control Datepiker" id="ProbationEndDate" value="" placeholder="Probation End Date" >
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidProbationEndDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
        <span class="field-validation-error" id="lbl-error-ValidProbationEndDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">Please Select Valid Probation End Date.</span>
    </div>
</div>

<div class="row marbot10">
    <label class="col-md-3">Next Probation Review Date</label>
    <div class="col-md-6">
        <input type="text" name="NextProbationReviewDate" class="form-control Datepiker" id="NextProbationReviewDate" value="" placeholder="Next Probation Review Date">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidNextProbationReviewDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
        <span class="field-validation-error" id="lbl-error-GreaterEndDate" style="display:none;" data-valmsg-for="DateAwarded" data-valmsg-replace="true">Please select end date is grater then start date.</span>
    </div>
</div>

<div class="row marbot10">
    <label class="col-md-3">Notice Period*</label>
    <div class="col-md-6 dropdown">
        <select class="form-control" id="drpNoticePeriod">
            @foreach (var Notice in Model.NoticePeriodList)
            {
                <option value="@Notice.Value">@Notice.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="ValidNoticePeriod" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>

<div class="row marbot10">
    <label class="col-md-3">Fixed Term End Date</label>
    <div class="col-md-6">
        <input type="text" name="FixedTermEndDate" class="form-control Datepiker" id="FixedTermEndDate" value="" placeholder="Fixed Term End Date">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <span class="field-validation-error" id="lbl-error-ValidFDEndDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none">Please Select Valid End Date.</span>
        <span class="field-validation-error" id="ValidFixedTermEndDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>
    </div>
</div>

<div class="row marbot10">
    <label class="col-md-3">Method of Recruitment Setup</label>
    <div class="col-md-6">
        <textarea name="MethodofRecruitmentSetup" class="form-control" id="MethodofRecruitmentSetup" value="" placeholder="Method of Recruitment Setup"></textarea>
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        @*<span class="field-validation-error" id="ValidFixedTermEndDate" data-valmsg-for="Title" data-valmsg-replace="true" style="display:none"></span>*@
    </div>
</div>

<div class="row marbot10">
    <label class="col-md-3">Recruitment Cost</label>
    <div class="col-md-3">
        <input type="number" name="RecruitmentCost" min="0" oninput="if(value.length>8)value=value.slice(0,8)" class="form-control" id="RecruitmentCost" placeholder="Recruitment Cost">
        <span class="form-control-bar"></span>
    </div>
    <div class="col-md-3">
        <select class="form-control" id="drpCurruncy">
            @foreach (var curryency in Model.CurruencyCodeList)
            {
                if (Model.curruencyCode.ToString() == curryency.Value)
                {
                    <option value="@curryency.Value" selected="selected">@curryency.Text</option>
                }
                else
                {
                        <option value="@curryency.Value">@curryency.Text</option>
                }
            }           
        </select>
    </div>
</div>
