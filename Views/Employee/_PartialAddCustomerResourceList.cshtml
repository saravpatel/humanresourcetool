@model HRTool.Models.Resources.MainResoureViewModel
<div id="AddCustomer" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="segmentsBox">
                <div class="performance-grid">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Resource</h4>
                        </div>
                        <div class="modal-body" align="right" id="AddCoustmerBody">

                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<input type="hidden" id="checkWorker" />

<div class="md-card">
    <div class="">
        <div id="tableDivcustomer">
            <div class="table-responsive">
                <div class="table-btns">
                    <div class="resource-table-btns">
                        <a class="btn btn-success btn-circle  btn-add-Customer" title="Add Project" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#AddCustomer"><i class="fa fa-plus"></i></a>
                        <a class="btn btn-primary btn-circle  btn-edit-Customer" title="Edit" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#AddProjectModel" disabled="disabled"><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-danger btn-circle  btn-delete-Customer" data-toggle="tooltip" data-placement="right" title="Delete" disabled="disabled"><i class="fa fa-trash-o"></i> </a>
                        <button title="Refresh" class="btn btn-primary btn-circle  btn-Refresh-Customer" data-toggle="tooltip" data-placement="right"><i class="fa fa-reply"></i></button>
                        <button title="Clear Sorting" class="btn btn-info btn-circle  btn-ClearSorting-Customer" data-toggle="tooltip" data-placement="right"><i class="fa fa-upload"></i></button>
                        <button class="btn btn-warning btn-circle  btn-clearFilter-Customer" title="Clear Filter"><i class="fa fa-filter" data-toggle="tooltip" data-placement="right"></i></button>
                        <a class="btn btn-primary btn-circle  btn-export2excel-Resoure" href="@Url.Action("ExportExcelCoustomer", "Employee")" title="Lounch"><i class="fa fa-rocket"></i></a>
                    </div>
                    <div class="resource-employee-details">
                        <div class="CustomerListCount Wrecord" style="display:none;">
                            <span>
                                <label>Total Companies :</label>
                                <input class="form-control" type="text" readonly="readonly" value="@Model.TotalCoumpany"> |
                            </span>
                            <span>
                                <label>Total Customers :</label>
                                <input class="form-control" type="text" readonly="readonly" value="@Model.TotalCustomer">
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="uk-overflow-container">
                <div class="table-responsive employeeList_fix_height">
                    <table id="CustomerListtable" class="table-bordered display table style2 table-striped">
                        <thead class="tblHeading">
                            <tr>
                                <th>Name</th>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Business</th>
                                <th>Division</th>
                                <th>Pool</th>
                                <th>Funcation</th>
                                <th>Type</th>
                                <th>Performance Evaluations</th>
                                <th>Performance Pending</th>
                                <th>Skill Endorsed</th>
                                <th>Number Of Days</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.AllListData)
                            {

                                <tr id="@item.Id" class="dataTrCoustomer">
                                    <td>
                                        @item.FirstName
                                    </td>
                                    <td>
                                        @item.JobTitleName
                                    </td>
                                    <td>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        @item.BusinessName
                                    </td>
                                    <td>
                                        @item.DivisionName
                                    </td>
                                    <td>
                                        @item.PoolName
                                    </td>
                                    <td>
                                        @item.FunctionName
                                    </td>
                                    <td>@item.ResourceType</td>
                                    <td>NULL</td>
                                    <td>NULL</td>
                                    <td>@item.NumberofSkillsEndorsed</td>
                                    <td>@item.LengthofService</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    <input type="text" class="form-control FirstName" placeholder="First Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control JobTitleName" placeholder="Job Title">
                                </th>
                                <th>
                                    <input type="text" class="form-control CompanyName" placeholder="Company Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control BusinessName" placeholder="Business Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control DivisionName" placeholder="Division Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control PoolName" placeholder="Pool Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control FunctionName" placeholder="Function Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control ResourceTypeName" placeholder="Type">
                                </th>
                                <th>
                                    <input type="text" class="form-control OverallScore" placeholder="Performance Evolutions">
                                </th>
                                <th>
                                    <input type="text" class="form-control CoreStrengths" placeholder="Performance Pending">
                                </th>
                                <th>
                                    <input type="text" class="form-control TotalSkill" placeholder="Skill">
                                </th>
                                <th>
                                    <input type="text" class="form-control NumberofSkillsEndorsed" placeholder="Number Of Days">
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
    </div>
</div>
</div>
