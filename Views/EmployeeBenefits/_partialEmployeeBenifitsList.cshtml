@model IList<HRTool.Models.Resources.BenefitsViewModel>

<div id="EmployeeBenefitModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Employee Benefit</h4>
            </div>
            <div class="modal-body" id="EmployeeBenefitBody">

            </div>
            <div class="modal-footer">
                @*<button type="submit" class="btn btn-success" id="btn-submit-AdminCaseLog">Add</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>*@
            </div>
        </div>

    </div>
</div>

<div class="table-btns">
    <a class="btn btn-success btn-circle  btn-add-EmployeeBenefit" title="Add Case" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#EmployeeBenefitModal"><i class="fa fa-plus"></i></a>
    <a class="btn btn-primary btn-circle  btn-edit-EmployeeBenefit" title="Edit" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#EmployeeBenefitModal" disabled="disabled"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-danger btn-circle  btn-delete-EmployeeBenefit" data-toggle="tooltip" data-placement="bottom" title="Delete" disabled="disabled"><i class="fa fa-trash-o"></i> </a>
    <button title="Refresh" class="btn btn-primary btn-circle  btn-Refresh-EmployeeBenefit" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-reply"></i></button>
    <button title="Clear Sorting" class="btn btn-warning btn-circle  btn-ClearSorting-EmployeeBenefit" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-upload"></i></button>
    <button class="btn btn-warning btn-circle  btn-clearFilter-EmployeeBenefit" data-toggle="tooltip" data-placement="bottom" title="Clear Filter"><i class="fa fa-filter"></i></button>
</div>

<table id="EmployeeBenefitTable" class="table-bordered display table style2 table-striped  dataTable" cellspacing="0">
    <thead>
        <tr class="tblHeading">
            <th>Benefit</th>
            <th>Date Awarded</th>
            <th>Expiry Date</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id" class="dataTr">
                <td>@item.BenefitValue</td>
                <td>@item.DateAwarded</td>
                <td>@item.ExpiryDate</td>
                <td>@item.FixedAmount</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th ><input type="text" class="form-control SearchBenefit" placeholder="Benefit"></th>
            <th ><input type="text" class="form-control SearchDateAwarded" placeholder="Date Awarded"></th>
            <th ><input type="text" class="form-control SearchExpiryDate" placeholder="Expiry Date"></th>
            <th ><input type="text" class="form-control SearchValue" placeholder="Value"></th>
        </tr>
    </tfoot>
</table>
