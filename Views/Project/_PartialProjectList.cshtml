@model  IList<HRTool.Models.Settings.ProjectViewModel>

<div id="AddProjectModel" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title projectTitle">Add Project</h4>
            </div>
            <div class="modal-body" id="addProjectBody">
               
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="btn-submit-ProjectRecord">Add</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<div class="table-btns">
    <a class="btn btn-success btn-circle  btn-add-Project" title="Add Project" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#AddProjectModel"><i class="fa fa-plus"></i></a>
    <a class="btn btn-primary btn-circle  btn-edit-Project" title="Edit" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#AddProjectModel" disabled="disabled"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-danger btn-circle  btn-delete-Project" data-toggle="tooltip" data-placement="right" title="Delete" disabled="disabled"><i class="fa fa-trash-o"></i> </a>
    <button title="Refresh" class="btn btn-primary btn-circle  btn-Refresh-Project" data-toggle="tooltip" data-placement="right"><i class="fa fa-reply"></i></button>
    <button title="Clear Sorting" class="btn btn-warning btn-circle  btn-ClearSorting-Project" data-toggle="tooltip" data-placement="right"><i class="fa fa-upload"></i></button>
    <button class="btn btn-warning btn-circle  btn-clearFilter-Project" title="Clear Filter"><i class="fa fa-filter" data-toggle="tooltip" data-placement="right"></i></button>
</div>

<table id="ProjectListtable" class="table-bordered display table style2 table-striped  dataTable" cellspacing="0">
    <thead>
        <tr class="tblHeading">
            <th>Name</th>
            <th>Country</th>
            <th>Location</th>
            <th>Project Owner</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id" class="dataTr">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CountryName
                </td>
                <td>
                    @item.LocationName
                </td>
                <td>
                    @item.ProjectOwner
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th >
                <input type="text" class="form-control SearchName" placeholder="Search Name">
            </th>
            <th >
                <input type="text" class="form-control SearchCountryName" placeholder="Search Country Name">
            </th>
            <th >
                <input type="text" class="form-control SearchLocationName" placeholder="Search Location Name">
            </th>
            <th >
                <input type="text" class="form-control SearchProjectOwner" placeholder="Search Project Owner">
            </th>
        </tr>
    </tfoot>
</table>
