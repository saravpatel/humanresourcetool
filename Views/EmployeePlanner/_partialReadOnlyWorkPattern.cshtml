@model HRTool.Models.Settings.WorkPatternViewModel


<div class="row">

    <div class="row marbot10">
        <div class="col-md-3">
            <label class="control-label" for="Effectivefromdate">Effective from date*</label>
        </div>
        <div class="col-md-6">
            <input type="text" value="@Model.Effectivefromdate" id="txt_Effectivefromdate" class="form-control" />
        </div>
        <div class="col-md-3">
            <span class="field-validation-error" id="lbl-error-Effectivefromdate" style="display:none;" data-valmsg-for="StartDate" data-valmsg-replace="true">Effective Date is required.</span>
            <span class="field-validation-error" id="lbl-error-ValidEffectivefromdate" style="display:none;" data-valmsg-for="StartDate" data-valmsg-replace="true">Effective Date is not valid.</span>

        </div>
    </div>

    <div class="col-md-5">
        <input type="hidden" id="WorkPattenId" value="@Model.Id" />
        <input type="text" readonly="readonly" placeholder="Work patten Name" value="@Model.Name" id="txt_Name" class="form-control" />

    </div>
    <div class="col-md-3">

    </div>
    <div class="col-md-4">
        @if (Model.IsRotating)
        {
            <input type="checkbox" disabled="disabled" name="ReadOnlyAllowRotating" id="ReadOnlyAllowRotating" checked="checked">
        }
        else
        {
            <input type="checkbox" disabled="disabled" name="ReadOnlyAllowRotating" id="ReadOnlyAllowRotating">
        }

        <label for="AllowRotating" class="inline-label" data-toggle="tooltip" data-placement="right" title="Allow Mobile Use">Allow Rotating</label>
    </div>

</div>
<br />

<div id="workPatternDiv">
    @if (Model.IsRotating)
    {
        @Html.Partial("_partialReadonlyTrueIsRotating", Model.WorkPatternList);
    }
    else
    {
        @Html.Partial("_partialReadonlyFalseIsRotating", Model);
    }
</div>