@model HRTool.Models.Resources.EmployeePerformanceViewModel
@*<input type="hidden" value="@Model.EmployeeId" />
    <input type="hidden" value="@Model.ReviewId" />*@
<table class="table style2 uk-margin-remove">
    <tbody>
        @foreach (var item in Model.ListOfPastPerformace)
        {
            if (item.CompletionDate < DateTime.Now)
            {
            <tr>
                <td>
                    <div class="past-review">
                        <ul class="noselect1" id="@item.Id" onclick="openReviewSegments(@item.Id,@item.ReviewId,@Model.EmployeeId,@Model.IsActivePastFlag);">
                                <li>
                                    <div class="col-xs-1">
                                        <img src="/Hrtool/Images/defaultPicture.png" alt="" class="img-responsive">
                                    </div>
                                    <div class="col-xs-10">
                                        <div class="row">
                                            <div class="col-xs-5">
                                                <div>Reviewed By:</div>
                                                <strong>@item.ReviewByName</strong>
                                            </div>
                                            <div class="col-xs-7 text-right" style="margin-top:12px;">
                                                @item.ReviewName &nbsp;&nbsp; @item.CompletionDate
                                                <span class="badge">Overall Score: 3</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-1">
                                        <div class="arrow-eff">
                                            <i class="material-icons">navigate_next</i>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>                            
                        </ul>
                    </div>
                </td>
            </tr>

            }
        }
    </tbody>
</table>

