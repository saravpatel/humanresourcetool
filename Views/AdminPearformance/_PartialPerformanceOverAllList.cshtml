@model HRTool.Models.Admin.PerformanceIndexPageViewModel
<div class="row">
    <div class="col-md-12">
        <ul class="list-group list-inline" style="margin-left:10px;">
            <li>
                <label class="control-label" for="ReviewList">Review</label>
                <select class="form-control" id="drpReviewList">
                    <option value="0">--Select--</option>
                    @foreach (var item in Model.PerformanceReviewList)
                    {
                         if (Model.SelectedReviewId == item.Value)
                         {
                             <option value="@item.Value" selected="selected">@item.Text</option>
                         }
                         else
                         {
                            <option value="@item.Value">@item.Text</option>
                         }
                    }
                </select>
            </li>

            <li>
                <label class="control-label" for="JobTitleList">Job Title</label>
                <select class="form-control" id="drpJobtitleList">
                    <option value="0">--Select--</option>
                    @foreach (var item in Model.JobTitleList)
                    {
                       if (Model.SelectedJobTitleId == item.Value)
                       {
                            <option value="@item.Value" selected="selected">@item.Text</option>
                       }
                       else
                       {
                            <option value="@item.Value">@item.Text</option>
                       }
                    }
                </select>
            </li>
            <li>
                <label class="control-label" for="ManagerList">Manager Name</label>
                <select class="form-control" id="drpManagerList">
                <option value="0">--Select--</option>
                @foreach (var item in Model.ManagerResourceList)
                {
                    if (Model.SelectedManagerId == item.Value)
                    {
                        <option value="@item.Value" selected="selected">@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
                </select>
            </li>
            <li>
                <label class="control-label" for="PoolList">Pool</label>
                <select class="form-control" id="drpPoolList">
                <option value="0">--Select--</option>
                @foreach (var item in Model.PoolList)
                {
                    if (Model.SelectedPoolId == Convert.ToString(item.Value))
                    {
                            <option value="@item.Value" selected="selected">@item.Text</option>
                    }
                    else
                    {
                            <option value="@item.Value">@item.Text</option>
                    }
                }
                </select>
            </li>
            <li>
                <label class="control-label" for="FilterLable">Filter</label>
                <select class="form-control" id="drpFilterList">
                <option value="0">--Select--</option>
                @foreach (var item in Model.FilterList)
                {
                    if (Model.SelectedFilterValue == item.Value)
                    {
                            <option value="@item.Text" selected="selected">@item.Text</option>
                    }
                    else
                    {
                            <option value="@item.Text">@item.Text</option>
                    }
                }
                </select>
            </li>
        </ul>
        <ul class="list-group list-inline" style="margin-top:-30px;margin-left:6px;">
            <li>
                <label class="control-label" for="FilterLable"></label>
                <button class="btn btn-success" style="margin-top:35px;" onclick="ApplyFilterOnPerformanceOverAllList()">Apply Filter</button>
            </li>
            <li>
                <button class="btn btn-success" style="margin-top:35px;" onclick="ClearOverAllFilter()">Reset</button>
            </li>
            <li>
                <button class="btn btn-danger btn-circle btn-export2excel-Resoure" href="@Url.Action("ExportToExcelOverallScore", "AdminPearformance")" title="export2excel" style="margin-top:35px;"><i class="fa fa-upload"></i></button>
            </li>
        </ul>
    </div>
    @*<div class="col-md-12">
        <ul class="list-group list-inline" style="margin-top: -47px;margin-left: 6px;">
            <li>
                <label class="control-label" for="FilterLable"></label>
                <button class="btn btn-success" style="margin-top: 35px;" onclick="ApplyFilterOnPerformanceOverAllList()">Apply Filter</button>
            </li>
            <li><button class="btn btn-success" style="margin-top: 35px;" onclick="ClearOverAllFilter()">Clear Filter</button></li>
            <li><button class="btn btn-danger btn-circle  btn-export2excel-Resoure" href="@Url.Action("ExportToExcelOverallScore", "AdminPearformance")" title="export2excel" style="margin-top:35px;"><i class="fa fa-upload"></i></button></li>
        </ul>
    </div>*@
     
      
</div>
 <br />
 <div class="row">
     <div class="table-responsive" style="padding-left: 15px;">
         <table class="table-bordered display table style2 table-striped dataTable no-footer">
             <tbody>
                 @foreach (var item in Model.GetOverAllEmployeeList)
                 {                    
                  <tr class="noselect1" id="@item.PerfReviewId">
